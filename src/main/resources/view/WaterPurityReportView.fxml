<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.gatech.scrumbags.controller.WaterPurityReportController">
    <top>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="55.0" prefWidth="555.0"
               text="Water Purity Report" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
                <Font size="45.0"/>
            </font>
            <BorderPane.margin>
                <Insets top="50.0"/>
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label id="errorMessage" fx:id="errorMessage" text="Error" textFill="RED">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="600.0">
                    <children>
                        <Label prefHeight="27.0" prefWidth="178.0" text="Water Location (GPS):">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label fx:id="locationLabel" prefHeight="27.0" prefWidth="124.0" text="Location">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="27.0" prefWidth="208.0"
                               text="Overall Condition:  ">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="waterConditionCombo" prefWidth="150.0"/>
                    </children>
                    <padding>
                        <Insets right="27.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="27.0" prefWidth="209.0"
                               text="Virus PPM:  ">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="virusPPMText"/>
                    </children>
                    <padding>
                        <Insets right="27.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="27.0" prefWidth="209.0"
                               text="Contaminant PPM:  ">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="contaminantPPMText"/>
                    </children>
                    <padding>
                        <Insets right="27.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmitPressed"
                                text="Submit">
                            <HBox.margin>
                                <Insets right="20.0"/>
                            </HBox.margin>
                        </Button>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelPressed"
                                text="Cancel">
                            <HBox.margin>
                                <Insets left="20.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
