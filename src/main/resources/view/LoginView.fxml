<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.76-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.gatech.scrumbags.controller.LoginController">
    <top>
        <Label text="Login" BorderPane.alignment="CENTER">
            <font>
                <Font size="36.0"/>
            </font>
            <BorderPane.margin>
                <Insets top="50.0"/>
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <Label fx:id="badLoginLabel" text="Bad login attempt! Try again." textFill="#ab0000"
                   visible="false">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <Label alignment="BOTTOM_RIGHT" text="Username:">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Label>
                <TextField fx:id="usernameField"/>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <Label alignment="BOTTOM_RIGHT" text="Password:">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </Label>
                <PasswordField fx:id="passwordField">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </PasswordField>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
                <padding>
                    <Insets bottom="50.0"/>
                </padding>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#handleLoginPressed"
                        text="Login">
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                </Button>
                <Button cancelButton="true" mnemonicParsing="false" onAction="#handleCancelPressed"
                        text="Cancel">
                    <HBox.margin>
                        <Insets left="20.0"/>
                    </HBox.margin>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>
